<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Buyify_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Buyify_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <div class="Content-div-nav">
           <div class="align-item-div-bar">
            <a href="Accueil">
                <img src="/image/Logo.png" class="LogoAccueil" />
            </a>
            <a href="">
                <button class="BtnAdresseLogin">
                    <p>Bonjour<br /><b>Entrer votre adresse</b></p>
                </button>
            </a>
            <div class="FrameSearch">
                <select id="selection" class="selectionOption">
                    <option value="TouteCategorie">Toutes nos catégories</option>
                    <option value="notre store">Buyify Global</option>
                    <option value="nos revendeurs">Buyify Seconde main</option>
                </select>
                <input class="SearchInput" placeholder="Rechercher buyify.fr" />
                <a href="" >
                    <img src="/image/loope.png" class="BtnValidation" />
                </a>
            </div>            
            <div class="dropdown">                
                <a href="">
                    <button class="dropbtn">
                        <div><span>Bonjour, Identifiez-vous</span></div>
                        <span><b>Comptes et listes</b></span>
                    </button>
                </a>
                <div class="dropdown-content">
                    <button class="btn">Identifiez-vous</button>
                    <div class="grid-container">
                        <div class="grid-item">
                            <p><b>Vos listes d'envies</b></p>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                        </div>
                        <div class="grid-item">
                            <p><b>Votre compte</b></p>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                            <a href="">
                                <button class="btn">Vos commandes</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre liste d'envies</button>
                            </a>
                            <a href="">
                                <button class="btn">Vos livraisons</button>
                            </a>
                            <a href="">
                                <button class="btn">Votre compte</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <a href="">
                <button class="BtnAdresseLogin1">
                    <div><span>Bonjour, Identifiez-vous</span></div>
                    <span><b>Comptes et listes</b></span>
                </button>
            </a>
            </div>

        </div>
       

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Accueil">Buyify Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Accueil">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Recherche</a>
                        </li>
                    </ul>
                </div>
            </div>          
            
        </nav>
        
    </header>
    <div class="container-full">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Buyify Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>